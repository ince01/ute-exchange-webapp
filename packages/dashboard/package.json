    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "antd": "^4.0.0",
    "axios": "^0.19.2",
    "hoist-non-react-statics": "^3.3.2",
    "immer": "^5.3.6",
    "invariant": "^2.2.4",
    "lodash": "^4.17.15",
