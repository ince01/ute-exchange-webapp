{
  "extends": ["react-app", "airbnb", "plugin:jsx-a11y/recommended", "prettier/react", "plugin:prettier/recommended"],
  "plugins": ["jsx-a11y"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/no-array-index-key": 0,
    "comma-dangle": 0,
    "semi": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }]
  },
  "globals": {
    "document": true,
    "window": true,
    "navigator": true
  }
}
